#!/usr/bin/env ruby

require 'xcoder'

dir = ARGV[0]||'.'

dirs = Dir["#{dir}/*.xcodespec"]

puts dirs

if dirs.count>1
  puts "Found several buildfiles, which one do you want to use (e.g. xcoder #{dirs[0]}):\n  #{dirs.join('\n  ')}"
  exit 1
else
  bc = Xcode::BuilderConfig.load dirs[0]
  bc.build
end